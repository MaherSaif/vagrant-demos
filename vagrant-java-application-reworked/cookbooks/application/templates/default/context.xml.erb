<Context docBase="<%= @war %>" path="<%= @path ? @path :"/"%> "
        debug="5" reloadable="true" crossContext="true" allowLinking="true" <%= %Q{privileged="true"} if @privileged %>>
  <Environment name="appEnvironment" value="<%= node['app_environment'] %>"
          type="java.lang.String" override="false"/>
<% if @database %>
  <Resource name="jdbc/<%= @app %>" auth="Container" type="javax.sql.DataSource"
               maxActive="<%= @database['max_active'] %>" maxIdle="<%= @database['max_idle'] %>" maxWait="<%= @database['max_wait'] %>"
               username="<%= @database['username'] %>" password="<%= @database['password'] %>" driverClassName="<%= @database['driver'] %>"
               url="jdbc:<%= @database['adapter'] %>://localhost:<%= @database['port'] %>/<%= @database['database'] %>"/>
<% end %>
</Context>
